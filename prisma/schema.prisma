// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  profile Profile?
  Post    Post?
}

model Profile {
  userId    Int       @id @unique
  user      User      @relation(fields: [userId], references: [id])
  fullname  String    @db.Text
  nickname  String?
  workplace String?
  address   String?
  relation  String?
  createdAt DateTime?
}

model Mode {
  modeId   Int    @id @default(autoincrement())
  modeName String @db.VarChar(100)
  Post     Post?
}

model Post {
  postId     Int      @id @default(autoincrement())
  desc       String?  @db.Text
  imageUrl   String?  @db.VarChar(200)
  createAt   DateTime
  modeId     Int?      @unique
  mode       Mode?     @relation(fields: [modeId], references: [modeId])
  reactionId Int?      @unique
  reaction   Reaction? @relation(fields: [reactionId], references: [reactionId])
  userId     Int?      @unique
  user       User?     @relation(fields: [userId], references: [id])
}

model Reaction {
  reactionId    Int    @id @default(autoincrement())
  nameReaction  String
  imageReaction String
  Post          Post?
}
